<?php
	global $wp_query, $query_string;
	query_posts($query_string . "&posts_per_page=-1");
?>

<hgroup>
- if(is_category()):
	<h1>
		= single_cat_title()
	</h1>
	
- elseif(is_tag()):
	<h1>
		= single_tag_title()
	</h1>
- endif;
	<h2 class="sub"><?php echo $wp_query->post_count;?> posts</h2>
</hgroup>

<ol class="archive-list post-list">
- if(have_posts()): while(have_posts()): the_post();
	
	= render_partial("partials/archive_item")
	
- endwhile; endif;
</ol>