<article role="article">
	<header>
		<?php if(is_single()):?>
		<h1>
			= the_title()
		</h1>
		<?php else: ?>
		<h1>
			= link_to(get_the_title(), get_permalink())
		</h1>
		<?php endif; ?>
		

		= render_partial("posts/post-header")
		
	</header>
	
	<div class="post-text">
	
		- if(is_single()):
			= get_the_filtered_content()
		- else:
			= the_excerpt()
		- endif;
	
	</div>
</article>